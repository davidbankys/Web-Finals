@model RegisterVm
@{
    ViewData["Title"] = "Register";
}

<div class="card border-0 shadow-sm rounded-0">
    <div class="card-header text-center h6 text-uppercase">Fill your information to the form below to start Career Connect !</div>
    <div class="card-body">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="applicant-register-tab" data-bs-toggle="tab" data-bs-target="#applicant" type="button" role="tab" aria-controls="applicant" aria-selected="true">Register as an applicant</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="employer-register-tab" data-bs-toggle="tab" data-bs-target="#employer" type="button" role="tab" aria-controls="employer" aria-selected="false">Register as an employer</button>
            </li>
        </ul>
        <div class="tab-content" id="register-tab-content">
            <div class="tab-pane fade show active py-3" id="applicant" role="tabpanel" aria-labelledby="applicant-register-tab">
